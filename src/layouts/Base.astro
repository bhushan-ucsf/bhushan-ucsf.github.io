---
export interface Props { title?: string; description?: string; }
const { title = "Your Name", description = "Scientist, explorer of the unknown" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#00ffe1" />
    <link rel="icon" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles.css" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/social.png" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <a class="skip" href="#main">Skip to content</a>
    <slot name="bg" />
    <header class="container" style="position:sticky;top:0.75rem;z-index:10">
      <div class="grid grid-cols-1 md:grid-cols-[1fr_auto] gap-3 rounded-2xl" style="border:1px solid #1b2238; padding:1rem; backdrop-filter: blur(8px); background: rgba(11,14,23,0.7)">
        <div style="display:flex;align-items:center;gap:0.75rem">
          <img src="/headshot.jpg" alt="Headshot" class="w-16 h-16 rounded-xl" loading="eager" width="64" height="64"/>
          <div>
            <h1 class="text-2xl" style="font-weight:700;letter-spacing:.3px;text-shadow:0 0 12px rgba(0,255,225,.6)"><a href="/" style="text-decoration:none;color:var(--ink)">Your Name</a></h1>
            <p style="color:var(--dim)">Scientist at UC, research in ABC</p>
          </div>
        </div>
        <nav style="display:flex;gap:0.5rem;align-items:center;justify-content:flex-start;flex-wrap:wrap">
          <a class="nav-link" href="/">Home</a>
          <a class="nav-link" href="/publications">Publications</a>
          <a class="nav-link" href="/projects">Projects</a>
          <a class="nav-link" href="/cv">CV</a>
          <a class="nav-link" href="/contact">Contact</a>
        </nav>
      </div>
    </header>
    <main id="main" class="container" style="position:relative;z-index:10;margin:1.5rem 0">
      <article class="card">
        <slot />
      </article>
    </main>
    <footer class="container" style="margin:1rem 0;color:var(--dim);display:flex;gap:.5rem;flex-wrap:wrap;position:relative;z-index:10">
      <span>© Your Name {new Date().getFullYear()}</span>
      <span>•</span>
      <a href="https://orcid.org/your-orcid">ORCID</a>
      <a href="https://scholar.google.com/citations?user=XXXX">Scholar</a>
      <a href="https://github.com/yourname">GitHub</a>
    </footer>
  </body>
</html>
